# Top-most editorconfig file
root = true

# Unix-style newlines with newline ending every life
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,scss,css}]
charset = utf-8
indent_style = space
indent_size = 2

# Matches the exact files either package.json
[{package.json}]
indent_size = 2
indent_style = space
